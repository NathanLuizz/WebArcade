@model WebArcade.Models.Games

@{
    ViewData["Title"] = "Create";
}

<h1>Jogos</h1>

<h4> adicionar jogos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desenvolvedora" class="control-label"></label>
                <input asp-for="Desenvolvedora" class="form-control" />
                <span asp-validation-for="Desenvolvedora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anolancamento" class="control-label"></label>
                <input asp-for="Anolancamento" class="form-control" />
                <span asp-validation-for="Anolancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">voltar</a>
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
