@model WebArcade.Models.Games

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Games</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desenvolvedora" class="control-label"></label>
                <input asp-for="Desenvolvedora" class="form-control" />
                <span asp-validation-for="Desenvolvedora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anolancamento" class="control-label"></label>
                <input asp-for="Anolancamento" class="form-control" />
                <span asp-validation-for="Anolancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" asp-action="Index">voltar</a>
                <input type="submit" value="Savar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
